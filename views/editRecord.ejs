    <br><br><br><br><br><br>

        <form action="/editRecord/<%= ResponseID %>" method="post">
            <div class="container">
                <h2>Edit Record</h2>
                <input type="hidden" id="ResponseID" name="ResponseID" value="<%=Dude[0].ResponseID %>">
                <label for="age">Age:</label>
                <input name="age" type="number" min="1" id="age" title="Type your age." value="<%= Dude[0].Age %>" autofocus required>
                <br><br>
                <label for="gender">Gender:</label>
                <select name="gender" id="gender" value="<%= Dude[0].Gender %>" defaultValue="M">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-Binary">Non-Binary</option>
                    <option value="Trans">Trans</option>
                    <option value="Other">Other</option>
                </select>
                <br><br>
                <label for="relationshipStatus">Relationship Status:</label>
                <select name="relationshipStatus" id="relationshipStatus" value="<%= Dude[0].RelationshipStatus %>" defaultValue="relationship">
                    <option value="relationship">In a relationship</option>
                    <option value="single">Single</option>
                    <option value="married">Married</option>
                    <option value="divorced">Divorced</option>
                </select>
                <br><br>
                <label for="occupation">Occupation Status:</label>
                <select name="occupation" id="occupation" value="<%= Dude[0].OccupationStatus %>" defaultValue="retired">
                    <option value="retired">Retired</option>
                    <option value="salaried">Salaried Worker</option>
                    <option value="school">School Student</option>
                    <option value="university">University Student</option>
                </select>
            </div>
            </div>
            <br><br>
            <div class="container">
                <button type="submit" id="btnClick" class="createbtn">Save</button>
            </div>
        </form>
    <script src="/js/main.js">

    </script>
</body>
</html>