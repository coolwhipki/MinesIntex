        <th style="text-align: left;">OrganizationAffiliation</th>







         <th></th>
         <th></th>
       </tr>
     </thead>
     <tbody style="font-family: Arial; font-size: 9pt;">
      <% for (let iCount = 0; iCount < adminInfo.length; iCount++) { %>
        <!-- now we are writing html so we don't need the ejs tag (javascript structure code) guys -->
        <td><%= adminInfo[iCount].ResponseID %></td>
        <td><%= adminInfo[iCount].Origin %></td>
        <td><%= adminInfo[iCount].Date %></td>
        <td><%= adminInfo[iCount].Time %></td>
        <td><%= adminInfo[iCount].Age %></td>
        <td><%= adminInfo[iCount].Gender %></td>
        <td><%= adminInfo[iCount].RelationshipStatus %></td>
        <td><%= adminInfo[iCount].OccupationStatus %></td>
        <td><%= adminInfo[iCount].SocialMediaUse %></td>
        <td><%= adminInfo[iCount].HoursOnSocialMedia %></td>
        <td><%= adminInfo[iCount].SocialMediaWithoutPurpose %></td>
        <td><%= adminInfo[iCount].DistractedBySocialMedia %></td>
        <td><%= adminInfo[iCount].RestlessWithoutSocialMedia %></td>
        <td><%= adminInfo[iCount].EasilyDistractedScale %></td>
        <td><%= adminInfo[iCount].BotheredByWorriesScale %></td>
        <td><%= adminInfo[iCount].DifficultyConcentrating %></td>
        <td><%= adminInfo[iCount].CompareSelfOnSocialMedia %></td>
