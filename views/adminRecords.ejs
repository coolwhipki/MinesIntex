        <td><%= adminInfo[iCount].OrganizationAffiliationID %></td>
        <td><%= adminInfo[iCount].OrganizationAffiliation %></td>
           <td style="text-align: center;">
            <form action="/editRecord/<%= adminInfo[iCount].ResponseID %>" method="POST">
              <button type="submit">Edit</button>
            </form>
          </td>
           <td style="text-align: center;">
            <form action="/deleteRecord/<%= adminInfo[iCount].ResponseID %>" method="POST">
              <button type="submit">Delete</button>
            </form>
          </td>
